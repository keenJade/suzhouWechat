.search_bar {
  background-color: #fff;
  display: flex;
  height: 116rpx;
  align-items: center;
  padding: 0 30rpx;
}

.search_bar .input_box {
  display: flex;
  align-items: center;
  flex: 1;
  height: 60rpx;
  background: rgba(244, 244, 244, 1);
}

.search_bar .input_box image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx 0 40rpx;
}

.search_bar .qx {
  width: 100rpx;
  text-align: center;
  font-size: 30rpx;
}
.flex-tbtn {
  text-align: center;
  background: #fff;
  border-top: 1px solid #eaeaea;
}

.flex-tbtn .weui-flex__item {
  font-size: 32rpx;
  font-weight: 500;
  padding: 30rpx 0;
  color:rgba(153,153,153,1);
}

.flex-tbtn .weui-flex__item.active {
  font-weight: bold;
  position: relative;
  color: #333333;
}

.flex-tbtn .weui-flex__item.active::before {
  content: "";
  width: 24rpx;
	height: 6rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  background: #c6c3f0;
}

.flex-tbtn .weui-flex__item.active::after {
  content: "";
  display: none;
  bottom: -14rpx;
  left: 50%;
  position: absolute;
  border-style: solid;
  border-width: 16rpx 16rpx 14rpx 16rpx;
  border-color: transparent transparent #fff transparent; /* 只在显示是边框设置颜色，其他为透明*/
  transform: rotate(360deg) translateX(-50%); /* 按需求旋转角度*/
  z-index: 2;
}
.emptyData{
  position: fixed;
  width: 100vw;
