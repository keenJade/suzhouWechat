  margin: 0 20rpx 0 40rpx;
}
.goods_like {
  padding:0 20rpx 20rpx;
  margin-bottom: 20rpx;
}

.goods_like .weui-flex__item{
  text-align: center;
}
.goods_like .flex_item {
  padding-bottom: 0;
